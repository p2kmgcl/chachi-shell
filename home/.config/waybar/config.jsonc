    "interval": 1,
  },
  "sway/mode": {
    "format": "<span style=\"italic\">{}</span>",
  },
  "tray": {
    "spacing": 10,
  },
  "clock": {
    "tooltip-format": "<tt><small>{calendar}</small></tt>",
    "format": "{:%H:%M, %A %d de %B}",
    "calendar": {
      "mode": "year",
      "mode-mon-col": 4,
