// -*- mode: jsonc -*-
{
  "layer": "bottom",
  "position": "bottom",
  "height": 30,
  "spacing": 0,
  "reload_style_on_change": true,
  "modules-left": ["sway/mode", "sway/workspaces", "sway/scratchpad"],
  "modules-center": [],
  "modules-right": [
    "cpu",
    "memory",
    "battery",
    "custom/powerprofile",
    "custom/keyboardlayout",
    "pulseaudio",
    "backlight",
    "tray",
    "clock",
  ],
  "sway/workspaces": {
    "disable-scroll": true,
    "all-outputs": true,
    "warp-on-scroll": false,
  },
  "custom/powerprofile": {
    "exec": "/usr/bin/powerprofilesctl get",
