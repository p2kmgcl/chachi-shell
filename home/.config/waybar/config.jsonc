  "height": 30,
  "spacing": 10,
  "modules-left": ["sway/mode", "sway/workspaces", "sway/scratchpad"],
  "modules-center": ["sway/window"],
  "modules-right": [
    "custom/woffu",
    "pulseaudio",
    "network",
    "cpu",
    "memory",
    "backlight",
    "battery",
