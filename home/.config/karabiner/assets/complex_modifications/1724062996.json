{
  "title": "Map Control_Shift + C/V to copy/paste in term (ala Linux)",
  "maintainers": [
    "jjo"
  ],
  "rules": [
    {
      "description": "Map Control_Shift + C/V to copy/paste in term (ala Linux)",
      "manipulators": [
        {
          "type": "basic",
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.apple\\.Terminal$",
                "^com\\.googlecode\\.iterm2$",
                "^co\\.zeit\\.hyperterm$",
                "^co\\.zeit\\.hyper$",
                "^io\\.alacritty$",
                "^org\\.alacritty$",
                "^net\\.kovidgoyal\\.kitty$"
              ]
            }
          ],
          "from": {
            "key_code": "c",
            "modifiers": {
              "mandatory": [
                "control",
                "left_shift"
              ],
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "c",
              "modifiers": [
                "command"
              ]
            }
          ]
        },
        {
          "type": "basic",
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.apple\\.Terminal$",
                "^com\\.googlecode\\.iterm2$",
                "^co\\.zeit\\.hyperterm$",
                "^co\\.zeit\\.hyper$",
                "^io\\.alacritty$",
                "^org\\.alacritty$",
                "^net\\.kovidgoyal\\.kitty$"
              ]
            }
          ],
          "from": {
            "key_code": "v",
            "modifiers": {
              "mandatory": [
                "control",
                "left_shift"
              ],
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "v",
              "modifiers": [
                "command"
              ]
            }
          ]
        }
      ]
    }
  ]
}
