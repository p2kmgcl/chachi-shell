[color]
  ui = true

[commit]
  gpgsign = true
  verbose = true

[core]
  editor = nvim
  excludesfile = ~/.config/git/gitignore-global
  fsmonitor = true
  ignorecase = false
  untrackedcache = true
  pager = delta --light --max-line-length=512

[diff]
  algorithm = histogram
  context = 10
  renames = true
  renamelimit = 5000
  tool = neovim

[difftool]
  prompt = false

[difftool "neovim"]
  cmd = nvim -d $LOCAL $REMOTE

[difftool "vscode"]
  cmd = code --wait --diff $LOCAL $REMOTE

[fetch]
  prune = true
  prunetags = true

[gpg]
  format = ssh

[help]
  autocorrect = prompt

[init]
  defaultBranch = main

[merge]
  conflictstyle = merge
  tool = neovim

[mergetool]
  prompt = false
  tool = neovim

[mergetool "neovim"]
  cmd = nvim -d $REMOTE $MERGED $LOCAL

[mergetool "vscode"]
  cmd = code --wait $REMOTE $MERGED $LOCAL

[pull]
  rebase = true

[push]
  default = current

[rebase]
  autosquash = true
  autostash = true

[rerere]
  enabled = true

[user]
  email = contact@pablomolina.me
  name = Pablo Molina
  signingkey = ~/.ssh/id_rsa.pub
  username = p2kmgcl

[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true

[alias]
  h = !git config -l | grep alias.

  cifuentes = !~/.config/git/git-cifuentes

  do-checkout-pull-request = !~/.config/git/git-do-checkout-pull-request
  do-cherry-pick-search = !~/.config/git/git-do-cherry-pick-search
  do-clean-all-non-git-files = clean --force -d -X
  do-clean-local-repository = gc --prune=now --aggressive
  do-ignore-changes-on-file = update-index --assume-unchanged
  do-list-conflict-files = diff --name-only --diff-filter=U
  do-list-files-in-a-commit = ls-tree -r --name-only
  do-make-file-disapear-from-history = !~/.config/git/git-do-make-file-disapear-from-history
  do-open-pull-request = !~/.config/git/git-do-open-pull-request
  do-show-everyday-help = help everyday

  ada = add --all
  back = reset HEAD~1
  br = branch
  ch = checkout
  cm = commit
  cma = commit --amend
  cp = cherry-pick
  cpa = cherry-pick --abort
  cpc = cherry-pick --continue
  din = diff --name-only
  fea = fetch --all
  lg = log --pretty='%Cgreen%h %Cblue%an (%ar) %Creset%s'
  lgi = !~/.config/git/git-log-ids
  pl = pull
  ps = push
  psf = push --force
  rb = rebase
  rba = rebase --abort
  rbc = rebase --continue
  rbi = rebase --interactive
  rsh = reset --hard
  st = status --short
