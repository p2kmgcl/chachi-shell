[color]
  ui = auto

[core]
  editor = vim
  ignorecase = false
  pager = less -x4
  excludesfile = ~/.gitignore-global

[diff]
  tool = default-difftool

[difftool "default-difftool"]
  cmd = code --wait --diff $LOCAL $REMOTE

[help]
  autocorrect = 0

[merge]
  tool = code --wait --diff

[pull]
  rebase = true

[push]
  default = current

[rebase]
  autoStash = true

[user]
  name = Pablo Molina
  email = contact@pablomolina.me
  username = p2kmgcl

[alias]
  h = !git config -l | grep alias.

  cifuentes = !echo "Getting your master..." && git ch master && git fea && git rb upstream/master && git ps origin master && echo "Congrats! You have a master!"
  pushdemont = !echo "Pushing changes..." && sleep 1 && echo "Changes pushed, there is no way back." && echo "" && sleep 2 && echo "..." && sleep 2 && echo "..." && sleep 3 && echo "" && echo "Changes reverted."

  do-clean-all-non-git-files = clean --force -d -X
  do-clean-local-repository = gc --prune=now --aggressive
  do-ignore-changes-on-file = update-index --assume-unchanged
  do-list-conflict-files = diff --name-only --diff-filter=U
  do-list-files-in-a-commit = ls-tree -r --name-only
  do-make-file-disapear-from-history = !git filter-branch --force --index-filter 'git rm --cached --ignore-unmatch $1' --prune-empty --tag-name-filter cat -- --all && git push origin --force --all
  do-show-everyday-help = help everyday

  ada = add .
  back = reset HEAD~1
  br = branch
  brd = branch --delete
  ch = checkout
  cm = commit
  di = diff
  dih = diff HEAD
  din = diff --name-only
  fe = fetch
  fea = fetch --all
  lg = log --pretty=format:'%cr%Cred%d%Creset%  %Cgreen[%h]%Creset %Cblue[%ce]%Creset %s' --decorate
  lgs = log --pretty=format:'%cr%Cred%d%Creset%  %Cgreen[%h]%Creset %Cblue[%ce]%Creset %s' --decorate --max-count 20
  ps = push
  psf = push --force
  rb = rebase
  rba = rebase --abort
  rbc = rebase --continue
  rbi = rebase --interactive
  rs = reset
  rsh = reset --hard
  st = status --short
