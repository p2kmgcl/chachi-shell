[color]
  ui = auto

[user]
  name = Pablo Molina
  email = contact@pablomolina.me

[push]
  default = current

[core]
  editor = vim
  ignorecase = false
  pager = less -x4
  excludesfile = ~/.gitignore-global

[merge]
  tool = vimdiff

[help]
  autocorrect = 1

[alias]
  h = "! cat ~/.gitconfig"

  # List of shortcuts

  do-back-latest-commits = back
  do-checkout-pull-request = pr
  do-remove-all-non-git-files = clean --force -d -X
  do-send-pull-request = pull-request
  do-ignore-changes-on-file = update-index --assume-unchanged

  ada = add .
  br = branch
  bra = branch --all
  ch = checkout
  cm = commit
  fea = fetch --all
  lg = log --pretty=format:'%cr%Cred%d%Creset%  %Cgreen[%h]%Creset %Cblue[%ce]%Creset %s' --decorate
  ps = push
  rb = rebase
  rbc = rebase --continue
  rbi = rebase --interactive
  rsh = reset --hard
  st = status
