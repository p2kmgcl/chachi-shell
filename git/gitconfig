[color]
  ui = auto

[diff]
  tool = default-difftool

[difftool "default-difftool"]
  cmd = code --wait --diff $LOCAL $REMOTE

[user]
  name = Pablo Molina
  email = contact@pablomolina.me
  username = p2kmgcl

[push]
  default = current

[core]
  editor = code --wait
  ignorecase = false
  pager = less -x4
  excludesfile = ~/.gitignore-global

[merge]
  tool = code --wait --diff

[help]
  autocorrect = 0

[alias]
  h = "! cat ~/.gitconfig"

  cifuentes = !echo "Getting your master..." && git ch master && git fea && git rb upstream/master && git ps origin master && echo "Congrats! You have a master!"
  pushdemont = !echo "Pushing changes..." && sleep 1 && echo "Changes pushed, there is no way back." && echo "" && sleep 2 && echo "..." && sleep 2 && echo "..." && sleep 3 && echo "" && echo "Changes reverted."

  do-remove-all-non-git-files = clean --force -d -X
  do-send-pull-request = pull-request
  do-ignore-changes-on-file = update-index --assume-unchanged

  ad = add
  ada = add .

  back = reset HEAD~1

  br = branch
  bra = branch --all
  brd = branch --delete
  brD = branch -D

  ch = checkout
  chb = checkout --branch

  cm = commit
  cma = commit --amend
  cmp = commit --patch

  di = diff
  dih = diff HEAD
  din = diff --name-only

  fe = fetch
  fea = fetch --all

  lg = log --pretty=format:'%cr%Cred%d%Creset%  %Cgreen[%h]%Creset %Cblue[%ce]%Creset %s' --decorate
  lgs = log --pretty=format:'%cr%Cred%d%Creset%  %Cgreen[%h]%Creset %Cblue[%ce]%Creset %s' --decorate --max-count 20

  ps = push
  psd = push --delete
  psdo = push --delete origin
  psf = push --force
  psfo = push --force origin
  pso = push origin

  rb = rebase
  rba = rebase --abort
  rbc = rebase --continue
  rbi = rebase --interactive

  rs = reset
  rsh = reset --hard

  st = status
  sts = status --short
