#!/bin/bash

notify-send -i appointment-new -t 6000 "Toggle Woffu" "Updatingâ€¦"

curl -s 'https://liferay.woffu.com/api/svc/signs/signs' \
  -H 'Content-Type: application/json;charset=UTF-8' \
  -H "Authorization: Bearer ${WOFFU_TOKEN}" \
  --data-raw "{\"UserId\":${WOFFU_USER_ID},\"DeviceId\":\"WebApp\"}"

sleep 1
rm $WOFFU_SIGNS_FILE
rm $WOFFU_PRESENCE_FILE
sleep 5
rm $WOFFU_SIGNS_FILE
rm $WOFFU_PRESENCE_FILE

notify-send -i appointment-new -t 1000 "Toggle Woffu" "Done"

sleep 30
rm $WOFFU_SIGNS_FILE
rm $WOFFU_PRESENCE_FILE
